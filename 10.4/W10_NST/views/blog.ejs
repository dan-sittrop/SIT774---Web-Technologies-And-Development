    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all forms with the class 'article-form'
            const articleForms = document.querySelectorAll('.article-form');

            // Loop through each form and add a submit event listener
            articleForms.forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault(); // Prevent default form submission

                    // Get `data-event` and `data-category` values from the form's data attributes
                    const eventElementId = form.getAttribute('data-event');
                    const category = form.getAttribute('data-category');

                    // Find the 'Read More' anchor tag associated with this form
                    const readMoreLink = form.parentNode.querySelector('a#saveBlog');

                    // Retrieve the `href` attribute from the associated 'Read More' link
                    const misc = readMoreLink.getAttribute('href');

                    // Get the current date
                    const dateValue = new Date().toISOString().split('T')[0];

                    // Get the content of the corresponding `event` element
                    const eventValue = document.getElementById(eventElementId).innerHTML;

                    // Append the `date`, `event`, `category`, and `misc` values to the form action URL
                    this.action = `/register?date1=${encodeURIComponent(dateValue)}&event1=${encodeURIComponent(eventValue)}&category=${encodeURIComponent(category)}&misc=${encodeURIComponent(misc)}`;

                    // Submit the form
                    this.submit();
                });
            });
        });

