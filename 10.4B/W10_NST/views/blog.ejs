    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all forms with the class 'article-form' for event listener
            const articleForms = document.querySelectorAll('.article-form');

            // Loop through each form and add a 'submit' event listener
            articleForms.forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault(); // Prevent default form submission to control data handling

                    // Get the event ID and category from data attributes of the form
                    const eventElementId = form.getAttribute('data-event');
                    const category = form.getAttribute('data-category');

                    // Locate the 'Read More' link associated with this form to extract article URL
                    const readMoreLink = form.parentNode.querySelector('a#saveBlog');

                    // Get the URL from the 'href' attribute of the 'Read More' link
                    const misc = readMoreLink.getAttribute('href');

                    // Get the current date formatted as YYYY-MM-DD
                    const dateValue = new Date().toISOString().split('T')[0];

                    // Get the content from the corresponding event element
                    const eventValue = document.getElementById(eventElementId).innerHTML;

                    // Construct and update the form action URL with article details
                    this.action = `/register?date1=${encodeURIComponent(dateValue)}&event1=${encodeURIComponent(eventValue)}&category=${encodeURIComponent(category)}&misc=${encodeURIComponent(misc)}`;

                    // Submit the form programmatically after updating the action
                    this.submit();
                });
            });
        });
    </script>

