<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); -%>
</head>

<body>
    <header>
        <%- include('header'); -%>
            <!-- Standout Ribbon Section -->
            <div class="mb-5 text-white container-fluid d-flex justify-content-center align-items-center" id="caps"
                style="background-image: url('/images/Background.png'); background-size: cover; height: 33vh;">
                <div class="row justify-content-center">
                    <div class="col-12 mx-auto text-center py-5">
                        <!-- Use Bootstrap's responsive font size classes -->
                        <p class="display-1 display-md-2 display-sm-3">Membership Options</p>
                        <p class="fs-2 fs-md-3 fs-sm-4">Be invovlved in a high quality, value driven data & analytics community</p>
                    </div>
                </div>
            </div>



    </header>


    <main>
        <!-- Membership Options -->
        <div class="container">
            <div class="row align-items-center justify-content-center" style="background-color: white;">
                <!-- Option 1 -->
                <div class="col-md-4 col-sm-6 col-12 mb-4 d-flex justify-content-center">
                    <div class="card position-relative">
                        <img style="background-color: #d2dfe4;" src="IconOnly_Transparent_White2.png"
                            alt="Membership Yearly Image">
                        <div class="card-img-overlay d-flex flex-column">
                            <h1 class="card-title"><strong><a id="member1">Member</a></strong></h1>
                            <h4 class="card-text">Be included in exclusive events and new content from top data &
                                analytics leaders</h4>
                            <br>
                            <h4 class="card-text"><strong>$249 p/yr</strong></h4>
                            <form id="memberForm1" class="member-form card-img-overlay d-flex flex-column"
                                data-event="member1" data-category="membership" action="/register" method="POST">
                                <button type="submit" class="btn btn-primary mt-auto">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Option 2 -->
                <div class="col-md-4 col-sm-6 col-12 mb-4 d-flex justify-content-center">
                    <div class="card position-relative">
                        <img style="background-color: #d2dfe4;" src="IconOnly_Transparent_White2.png"
                            alt="Membership Yearly Image">
                        <div class="card-img-overlay d-flex flex-column">
                            <h1 class="card-title"><strong><a id="member2">Associate</a></strong></h1>
                            <h4 class="card-text">In addition to member benefits, get opportunities to promote your
                                work, research or content</h4>
                            <br>
                            <h4 class="card-text"><strong>$349 p/yr</strong></h4>
                            <form id="memberForm1" class="member-form card-img-overlay d-flex flex-column"
                                data-event="member2" data-category="membership" action="/register" method="POST">
                                <button type="submit" class="btn btn-primary mt-auto">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Option 3 -->
                <div class="col-md-4 col-sm-6 col-12 mb-4 d-flex justify-content-center">
                    <div class="card position-relative">
                        <img style="background-color: #d2dfe4;" src="IconOnly_Transparent_White2.png"
                            alt="Membership Yearly Image">
                        <div class="card-img-overlay d-flex flex-column">
                            <h1 class="card-title"><strong><a id="member3">Partner</a></strong></h1>
                            <h4 class="card-text">In addition to Associate benefits, be included in 3 x sponsored data
                                leader round table fine dining events</h4>
                            <br>
                            <h4 class="card-text"><strong>$549 p/yr</strong></h4>
                            <form id="memberForm1" class="member-form card-img-overlay d-flex flex-column"
                                data-event="member3" data-category="membership" action="/register" method="POST">
                                <button type="submit" class="btn btn-primary mt-auto">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Key Customer Quote Section -->
        <div class="container my-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="blockquote text-center">
                        <p class="mb-0" style="font-size: 1.5rem;">
                            "Joining the Thought Collective has been a game-changer for my career. The exclusive events
                            and networking opportunities have helped me stay ahead in the fast-evolving world of data
                            analytics."
                        </p>
                        <footer class="blockquote-footer mt-2">
                            <cite title="Source Title">Alex Johnson, Senior Data Scientist</cite>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all forms with the class 'register-form'
            const memberForms = document.querySelectorAll('.member-form');

            // Loop through each form and add a submit event listener
            memberForms.forEach(form => {
                form.addEventListener('submit', function (e) {
                    // Get `date`, `event`, and `category` element IDs from data attributes
                    const eventElementId = form.getAttribute('data-event');
                    const category = form.getAttribute('data-category'); // Get `data-category` value

                    // Get the content of the corresponding `date` and `event` elements
                    const dateValue = new Date().toISOString().split('T')[0];
                    const eventValue = document.getElementById(eventElementId).innerHTML;

                    // Append the `date`, `event`, and `category` values to the form action URL
                    this.action = `/register?date1=${encodeURIComponent(dateValue)}&event1=${encodeURIComponent(eventValue)}&category=${encodeURIComponent(category)}`;
                });
            });
        });
    </script>

    <footer class="text-center mt-auto">
        <%- include('footer'); -%>
    </footer>
</body>

</html>