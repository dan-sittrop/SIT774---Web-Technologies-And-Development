<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); -%>
</head>

<body>
    <header>
        <%- include('header'); -%>
            <!-- Standout Ribbon Section -->
            <div class="text-white container-fluid d-flex justify-content-center align-items-center" id="caps"
                style="background-image: url('/images/Background.png'); background-size: cover; height: 33vh;">
                <div class="row justify-content-center">
                    <div class="col-12 mx-auto text-center py-5">
                        <!-- Use Bootstrap's responsive font size classes -->
                        <p class="display-1 display-md-2 display-sm-3">Connect, share and learn</p>
                        <p class="fs-2 fs-md-3 fs-sm-4">Personalise saved blogs, events and more!</p>
                    </div>
                </div>
            </div>
    </header>


    <main class="container mt-5">
        <h1 class="text-center mb-4">Login</h1>

        <!-- Login Form -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/login" method="POST">
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                            required>
                    </div>

                    <!-- Password Input -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Enter your password" required>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-gradient w-100">Login</button>
                </form>

                <!-- Signup Link -->
                <p class="mt-3 text-center">Don't have an account? <a href="/signup">Sign up here</a></p>
            </div>
        </div>
    </main>

    <footer class="text-center mt-auto">
        <%- include('footer'); -%>
    </footer>
</body>

</html>